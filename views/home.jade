extends layout

block content
  .container-fluid
    if messages.error
      .alert.alert-danger(role='alert')
        for error in messages.error
          div= error.msg
    if messages.success
      .alert.alert-success(role='alert')
        for success in messages.success
          div= success.msg
    if messages.info
      .alert.alert-info(role='alert')
        for info in messages.info
          div= info.msg

    .row
      .col-xs-12.col-sm-12.col-md-offset-1.col-md-10
        .jumbotron
          img.img-responsive.center-block(src='/assets/image/pillo-logo.png')
          h1.text-center
            | Pillo
            br
            small Simple medication reminder
