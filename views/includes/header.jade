nav.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') #{t('app.header.brand')}
    #navbar.navbar-collapse.collapse
      ul.nav.navbar-nav
        li(class=(title == 'Home') ? 'active' : null)
          a(href='/') #{t('app.header.home')}
        li(class=(title == 'Pills') ? 'active' : null)
          a(href='/pill') #{t('app.header.pills')}
        //li(class=(title == 'Contact') ? 'active' : null)
          //a(href='/contact') #{t('app.header.contact')}
        li(class=(title == 'About') ? 'active' : null)
          a(href='/about') #{t('app.header.about')}
      ul.nav.navbar-nav.navbar-right
        li(class=(title == 'Settings') ? 'active' : null)
          a(href='/settings') #{t('app.header.settings')}
        if user
          li.dropdown
            a.navbar-avatar.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.picture
                img(src=user.picture)
              else
                img(src=user.gravatar)
              | <span> #{user.name || user.email || user.id} </span>
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') #{t('app.header.my_account')}
              li.divider
              li
                a(href='/logout') #{t('app.header.logout')}
        else
          li(class=(title == 'Log in') ? 'active' : null)
            a(href='/login') #{t('app.header.login')}
          li(class=(title == 'Sign up') ? 'active' : null)
            a(href='/signup') #{t('app.header.signup')}
